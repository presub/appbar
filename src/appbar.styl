@import 'mixins'
@import 'params'

x-appbar {
  padding: 0;
  width: 100%;
  flexbox();

  &, & * {
    box-sizing(border-box);
  }

  & > * {

    border: none;
    vertical-align: middle;
    text-align:center;

    -webkit-flex-align: center;
    -ms-flex-align: center;
    -webkit-align-items: center;
    align-items: center;
    text-align: center;
  }

  & > header {
    flex(1);
    overflow: hidden;
    text-overflow: ellipsis;
    margin: 0;
  }
}
